<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0"
        entity-class="com.github.iryabov.readingroom.entity.Review">
    <operations>
        <operation id="saveReview" submit-label="${publish}">
            <invocation>
                <java method="save" class="com.github.iryabov.readingroom.repository.ReviewRepository">
                    <spring/>
                    <arguments>
                        <argument name="entity" type="entity"/>
                    </arguments>
                </java>
            </invocation>
            <in>
                <field id="id" mapping="id"/>
                <field id="book.id" mapping="book.id"/>
                <field id="member.id" mapping="member.id" domain="integer" default-value="#{userId}"/>
                <field id="description" mapping="description"/>
            </in>
        </operation>
        <operation id="deleteReview">
            <invocation>
                <java method="deleteById" class="com.github.iryabov.readingroom.repository.ReviewRepository">
                    <spring/>
                    <arguments>
                        <argument name="id" type="primitive"/>
                    </arguments>
                </java>
            </invocation>
            <in>
                <field id="id" mapping="[0]"/>
            </in>
        </operation>
    </operations>

</object>
