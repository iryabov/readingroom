<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <form query-id="member">
        <fields>
            <input-text id="email" label="Email" required="true"/>
            <input-text id="name" label="Name" required="true"/>
            <text-area id="avatar" label="Avatar" help="Need to convert your image to Base64"/>
            <image id="imagePreview" data="{avatar}" width="30px"/>
        </fields>
        <pre-filters>
            <eq field-id="id" param="id"/>
        </pre-filters>
    </form>
</simple-page>
